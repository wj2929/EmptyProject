@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AEmptyProjectin.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.autocomplete.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.select.js")" type="text/javascript"></script>
<link type="text/css" rel="stylesheet" href="@Url.Content("~/css/jquery.autocomplete.css")" />
<style>
    .desc
    {
        display: inline;
        float: left;
        overflow: hidden;
        width: 310px;
        word-wrap: break-word;    
    }
    .StageInfopic 
    {
    border: 1px solid #E9E9E9;
    display: inline;
    float: left;
    margin-right: 10px;
    }
</style>

<script language=javascript>
    var CategoryId = "";
    $(function () {
        LoadStageInfo();

        $(".module_control .btn_add").click(function () {
            webLay("新建期刊", '@Url.Action("StageInfoCreate")', "max");
            return false;
        });

        $("#StageInfo .edit").live("click", function () {
            webLay("编辑期刊", '@Url.Action("StageInfoEdit")' + "?Id=" + $(this).parent().parent().attr("id"), "max");
            return false;
        });

        $("#StageInfo .comment").live("click", function () {
            webLay("查看评论", '@Url.Action("StageInfoComment")' + "?Id=" + $(this).parent().parent().attr("id"), "max");
            return false;
        });

        $("#StageInfo .del").live("click", function () {
            var Id = $(this).parent().parent().attr("id");
            yonLay("删除", "确认删除吗？", function (flag) {
                if (flag) {
                    addDo("正在处理，请稍后……");
                    $.post('@Url.Action("DeleteStageInfo")', { Id: Id }, function (data) {
                        ReLoad("StageInfo");
                    });
                }
            });
        });


        $("#SearchBut").click(function () {
            LoadStageInfo();
        });

        $("form").submit(function () {
            LoadStageInfo();
            return false;
        });

        $(".batch_delete").click(function () {
            var Ids = GetAllChecked("StageInfo");
            if (Ids != "") {
                yonLay("批量删除", "确认删除吗？", function (flag) {
                    if (flag) {
                        addDo("正在处理，请稍后……");
                        $.post('@Url.Action("DeleteStageInfos")', { Ids: Ids }, function (data) {
                            ReLoad("StageInfo");
                        });
                    }
                });
            } else {
                msgLay("错误信息", "请选择至少一项记录");
            }
            return false;
        });

        $('#Keyword').bind( "input.autocomplete", function(){
            $(this).trigger('keydown.autocomplete');
        });
        $("#Keyword").autocomplete("@Url.Action("GetAutoCompleteStageInfoNames")", {
            max: 12,    //列表里的条目数
            minChars: 1,    //自动完成激活之前填入的最小字符
            scrollHeight: 300,   //提示的高度，溢出显示滚动条
            autoFill: false,    //自动填充
		    width: 200,
		    matchContains: true,
		    formatItem: formatItem,
		    formatResult: formatResult
        });

        $("#MainStageInfoCategory .ContentItem").live("click",function(){
            CategoryId = $(this).attr("id");
            LoadChildCategoryList(CategoryId);
            LoadStageInfo();
        });
        $("#ChildStageInfoCategory .ContentItem").live("click",function(){
            CategoryId = $(this).attr("id");
            $("#ChildStageInfoCategory li").removeClass("curr");
            $("#ChildStageInfoCategory li[id='" + CategoryId + "']").addClass("curr");
            LoadStageInfo();
        });
    });

	function formatItem(row) {
		return row[0];
	}
	function formatResult(row) {
		return row[0];
	}


    function LoadStageInfo() {
        var page = $("#StageInfo").attr("Page");
        if (page == null) page = 1;
        var name = $("#Keyword").val();
        var _recommend = $("#srecommend").val();
        $("#StageInfo").showLoading();
        $.post('@Url.Action("GetList")', {CategoryId:CategoryId,Name:name,Recommend:_recommend, Page:page}, function (data) {
            $("#StageInfo").html(data);
        });
    }
    function ReLoad(loadType) {
        if (loadType == "StageInfo") {
            LoadStageInfo();
        }
    }

    function GoPage(page) {
        $("#StageInfo").attr("Page", page);
        ReLoad("StageInfo");
    }


</script>
<div id="iframeContent">
    <div class="center-t">
        <h2 class="t_name">期刊管理</h2>
    </div>
     <div class="center-c">
        <div class="module_mod">
            <div class="module_control">
                <!--简单搜索开始-->
                <div class="search_simple">
                    <div class="s_form">
                        <form>
                            <input type="text" class="form_text" id="Keyword"><input type="button" title="搜索" value="搜索" id="SearchBut" class="form_button">
                        </form>
                    </div>
                </div>
                <ul class="right">
                    <li><a class="btn_set btn_add" title="新建期刊" target="_blank" href="javascript:">新建期刊</a></li>
                </ul>
            </div>
			<div id="StageInfo" class="module_content">
                
			</div>
        </div>
    </div>
</div>
