@model  IList<EmptyProject.Domain.TestQuestion>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AEmptyProjectin.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.autocomplete.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.select.js")" type="text/javascript"></script>
<link type="text/css" rel="stylesheet" href="@Url.Content("~/css/jquery.autocomplete.css")" />
<style>
    .desc
    {
        display: inline;
        float: left;
        overflow: hidden;
        width: 310px;
        word-wrap: break-word;    
    }
    .TestQuestionpic 
    {
    border: 1px solid #E9E9E9;
    display: inline;
    float: left;
    margin-right: 10px;
    }
</style>

<script language=javascript>
    var CategoryId = "";
    var TestPaperId = "@ViewBag.TestPaperId";
    $(function () {

        LoadTestQuestionByTestPaper();

        $(".module_control .btn_add").click(function () {
            webLay("新建试题", '@Url.Action("TestQuestionCreate")', "max");
            return false;
        });

        $("#TestQuestion .edit").live("click", function () {
            webLay("编辑试题", '@Url.Action("TestQuestionEdit")' + "?Id=" + $(this).parent().parent().attr("id"), "max");
            return false;
        });

        $("#TestQuestion .comment").live("click", function () {
            webLay("查看评论", '@Url.Action("TestQuestionComment")' + "?Id=" + $(this).parent().parent().attr("id"), "max");
            return false;
        });

        $("#TestQuestion .del").live("click", function () {
            var Id = $(this).parent().parent().attr("id");
            yonLay("移除", "确认从试卷移除该试题吗？", function (flag) {
                if (flag) {
                    addDo("正在处理，请稍后……");
                    $.post('@Url.Action("RemoveTestQuestionFromTestPaper")', { Id: Id, TestPaperId: TestPaperId }, function (data) {
                        ReLoad("TestQuestion");
                    });
                }
            });
        });

        $("#TestQuestion .Recommend").live("click", function () {
            var Id = $(this).parent().parent().attr("id");
            yonLay("设置", "确认修改推荐吗？", function (flag) {
                if (flag) {
                    addDo("正在处理，请稍后……");
                    $.post('@Url.Action("SetReComment")', { Id: Id }, function (data) {
                        ReLoad("TestQuestion");
                    });
                }
            });
        });

        $("#SearchBut").click(function () {
            LoadTestQuestionByTestPaper();
        });

        $("form").submit(function () {
            LoadTestQuestionByTestPaper();
            return false;
        });

        $(".batch_delete").click(function () {
            var Ids = GetAllChecked("TestQuestion");
            if (Ids != "") {
                yonLay("批量删除", "确认删除吗？", function (flag) {
                    if (flag) {
                        addDo("正在处理，请稍后……");
                        $.post('@Url.Action("DeleteTestQuestions")', { Ids: Ids }, function (data) {
                            ReLoad("TestQuestion");
                        });
                    }
                });
            } else {
                msgLay("错误信息", "请选择至少一项记录");
            }
            return false;
        });

        $(".batch_audit").click(function () {
            var Ids = GetAllChecked("TestQuestion");
            if (Ids != "") {
                yonLay("批量审核", "确认审核吗？", function (flag) {
                    if (flag) {
                        addDo("正在处理，请稍后……");
                        $.post('@Url.Action("AuditTestQuestions")', { Ids: Ids }, function (data) {
                            ReLoad("TestQuestion");
                        });
                    }
                });
            } else {
                msgLay("错误信息", "请选择至少一项记录");
            }
            return false;
        });

        $(".batch_release").click(function () {
            var Ids = GetAllChecked("TestQuestion");
            if (Ids != "") {
                yonLay("批量上架", "确认上架吗？", function (flag) {
                    if (flag) {
                        addDo("正在处理，请稍后……");
                        $.post('@Url.Action("ReleaseTestQuestions")', { Ids: Ids }, function (data) {
                            ReLoad("TestQuestion");
                        });
                    }
                });
            } else {
                msgLay("错误信息", "请选择至少一项记录");
            }
            return false;
        });

        $(".batch_not_release").click(function () {
            var Ids = GetAllChecked("TestQuestion");
            if (Ids != "") {
                yonLay("批量下架", "确认下架吗？", function (flag) {
                    if (flag) {
                        addDo("正在处理，请稍后……");
                        $.post('@Url.Action("NotReleaseTestQuestions")', { Ids: Ids }, function (data) {
                            ReLoad("TestQuestion");
                        });
                    }
                });
            } else {
                msgLay("错误信息", "请选择至少一项记录");
            }
            return false;
        });

        $('#Keyword').bind("input.autocomplete", function () {
            $(this).trigger('keydown.autocomplete');
        });
        $("#Keyword").autocomplete("@Url.Action("GetAutoCompleteTestQuestionNames","TestQuestion")", {
            max: 12,    //列表里的条目数
            minChars: 1,    //自动完成激活之前填入的最小字符
            scrollHeight: 300,   //提示的高度，溢出显示滚动条
            autoFill: false,    //自动填充
		    width: 200,
		    matchContains: true,
		    formatItem: formatItem,
		    formatResult: formatResult
        });

        $("#MainTestQuestionCategory .ContentItem").live("click",function(){
            CategoryId = $(this).attr("id");
            LoadChildCategoryList(CategoryId);
            LoadTestQuestionByTestPaper();
        });
        $("#ChildTestQuestionCategory .ContentItem").live("click",function(){
            CategoryId = $(this).attr("id");
            $("#ChildTestQuestionCategory li").removeClass("curr");
            $("#ChildTestQuestionCategory li[id='" + CategoryId + "']").addClass("curr");
            LoadTestQuestionByTestPaper();
        });

    });

	function formatItem(row) {
		return row[0];
	}
	function formatResult(row) {
		return row[0];
	}


	function LoadTestQuestionByTestPaper() {

	    $("#TestQuestion").showLoading();
	    $.post('@Url.Action("GetListByTestPaper")', { TestPaperId:TestPaperId}, function (data) {
	        $("#TestQuestion").html(data);
	    });

    }
    function ReLoad(loadType) {
        if (loadType == "TestQuestion") {
            LoadTestQuestionByTestPaper();
        }
    }

    function GoPage(page) {
        $("#TestQuestion").attr("Page", page);
        ReLoad("TestQuestion");
    }

    function LoaEmptyProjectainCategoryList() {
        $("#MainTestQuestionCategory").showLoading();
        $.post('@Url.Action("GetMainCategoryList")', {}, function (data) {
            $("#MainTestQuestionCategory").html(data);
        });
    }

    function LoadChildCategoryList(parentCategoryId) {
        $("#MainTestQuestionCategory li").removeClass("curr");
        $("#MainTestQuestionCategory li[id='" + parentCategoryId + "']").addClass("curr");
        $("#ChildTestQuestionCategory").showLoading();
        $.post('@Url.Action("GetChildCategoryList")', { ParentCategoryId: parentCategoryId }, function (data) {
            $("#ChildTestQuestionCategory").html(data);
        });
    }

</script>
<div id="iframeContent">
    <div class="center-t">
        <h2 class="t_name">试卷试题管理</h2>
    </div>
     <div class="center-c">
        <div class="module_mod">
            <div class="module_control">
                <!--简单搜索开始-->
                <div class="search_simple" style="display:none">
                    <div class="s_form">
                        <form>
                            <input type="text" class="form_text" id="Keyword"><input type="button" title="搜索" value="搜索" id="SearchBut" class="form_button">
                        </form>
                    </div>
                </div>
                <ul class="right" style="display:none">
                    <li><a class="btn_set btn_add" title="加入试题" target="_blank" href="javascript:">加入试题</a></li>
                </ul>
            </div>
			<div id="TestQuestion" class="module_content">
			</div>
        </div>
    </div>
</div>
