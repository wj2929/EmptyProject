@model string
@using EmptyProject.DomainService.Interface;
@using EmptyProject.Domain;
@using EmptyProject.Manage.Code;
<input type="file" id="UploadBgPicture" name="UploadBgPicture" onkeydown="event.returnValue = false;" onchange="    javascript: return ajaxFileUploadBgPicture(1);" />
<dl class="BgPictureList" style="width:650px">
    <input type="hidden" name="BgPicture" id="BgPicture" value="@Model" />
    @if (!string.IsNullOrEmpty(Model))
    {
        <dd class="curr"><img class="pic" src="@Model" /></dd>
    }
</dl>
<script language=javascript>
    //ajax上传附件
    function ajaxFileUploadBgPicture(btnid) {
        $("#loading").ajaxStart(function () {
            $(this).show();
        }).ajaxComplete(function () {
            $(this).hide();
        });
        $.ajaxFileUpload
		(
			{
			    url: '/Upload_Ajax.aspx',
			    secureuri: false,
			    fileElementId: 'UploadBgPicture',
			    attachmentType: "UploadPic",
			    dataType: 'json',
			    success: function (data, status) {
			        if (data.error == "") {
			            $(".BgPictureList").html("").append('<input type="hidden" name="BgPicture" id="BgPicture" value="' + data.msg.Url + '" /><dd><img class="pic" src="' + data.msg.Url + '" /></dd> ')
                    }
			    }
			}
		)
        }
</script>
